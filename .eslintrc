{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": "off", // manipulated by editorconfig
        "eol-last": "off",
        "no-prototype-builtins": "off",
        "editorconfig/editorconfig": "error",
        "comma-dangle": ["error", "only-multiline"],
        "import/extensions": { "js": "always", "json": "never" },
        "no-multiple-empty-lines": ["error", { "max": 1 }],
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "padded-blocks": ["error", "always", { "allowSingleLineBlocks": true }]
    },
    "plugins": ["editorconfig"]
}
